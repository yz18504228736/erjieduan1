<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>CanGuanWang</display-name>
    <welcome-file-list>
        <welcome-file>front/login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>com.canguanwang.demo.filter.MyFilter</filter-class>
        <init-param>
            <param-name>myParam</param-name>
            <param-value>hello</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MyFilterFront</filter-name>
        <filter-class>com.canguanwang.demo.filter.MyFilter2</filter-class>
        <init-param>
            <param-name>myParam</param-name>
            <param-value>hello1</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>MyFilterFront</filter-name>
        <url-pattern>/front/*</url-pattern>
    </filter-mapping>
</web-app>